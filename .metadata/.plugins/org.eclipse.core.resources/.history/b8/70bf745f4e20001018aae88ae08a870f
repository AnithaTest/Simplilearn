package stepDefinitions;

import java.time.Duration;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

import io.cucumber.java.After;
import io.cucumber.java.Before;
import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import pageObjects.SaucedemoPageObject;

public class SauceddemoStepDefinition
{
	
	public static WebDriver driver;
	
	
	
	@Before
	@Given("User is on the sauce demo login page")
	public void user_is_on_the_sauce_demo_login_page(String URL)
	{
	driver= new ChromeDriver();
	driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(5));
	driver.get(URL);
	 
	}

	@When("user logs in to the application")
	public void user_logs_in_to_the_application() 
	{
		SaucedemoPageObject.username.sendKeys("standard_user");
	    SaucedemoPageObject.password.sendKeys("secret_sauce");
	    SaucedemoPageObject.login.click();
	    
	}

	@Then("user applies filter and adds the item to the cart")
	public void user_applies_filter_and_adds_the_item_to_the_cart() 
	{
		
		Select drpdwn = new Select(SaucedemoPageObject.filter);
		drpdwn.selectByIndex(2);
		SaucedemoPageObject.product.click();
		SaucedemoPageObject.AddtoCart.click();
	}

	@Then("user places the order")
	public void user_places_the_order() {
	    SaucedemoPageObject.Cart.click();
	    SaucedemoPageObject.checkout.click();
	    SaucedemoPageObject.username.sendKeys("Anitha");
	    SaucedemoPageObject.lastname.sendKeys("vijay");
	    SaucedemoPageObject.postalCode.sendKeys("654321");
	    SaucedemoPageObject.book.click();
	    SaucedemoPageObject.finish.click();
	    String confirmMessage = SaucedemoPageObject.confirmMessage.getText();
	    System.out.println(confirmMessage);
	    SaucedemoPageObject.backToProducts.click();
	}
	
	@After 
	@And("user close the browser")
	public void user_close_the_browser()
	{
	    driver.quit();
	}
}
